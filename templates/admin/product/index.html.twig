			<tr>
				<th>Image</th>
				<th>Nom</th>
				<th>Prix</th>
				<th></th>
			</tr>
			{% for product in results %}
				<tr>
					<td>
						<img src="{{ asset('img/product/' ~ product.image) }}" class="img-fluid w-25" alt="">
					</td>
					<td>{{ product.name }}</td>
					<td>{{ product.price }}â‚¬</td>
					<td>
						<a href="#" class="btn btn-warning">Modifier</a>
						<a href="#" class="btn btn-danger">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}







