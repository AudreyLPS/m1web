{#  extends : héritage d'un template parent #}
{% extends 'base.html.twig' %}

{# result est envoyé par le contrôleur #}
{% block body %}
	<h1>{{ (result.firstname ~ ' ' ~ result.lastname) | title }}</h1>
	<p>
		<a href="mailto:{{ result.email }}">{{ result.email }}</a>
	</p>
	<img src="{{ asset('img/team/' ~ result.photo) }}" alt="">
{% endblock %}